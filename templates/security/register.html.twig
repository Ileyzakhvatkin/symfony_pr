{% extends 'base_auth.html.twig' %}

{% block title %}Регистрация на BlaBlaArticle{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Регистрация</h5>
                    <div class="alert alert-success" role="alert">
                        Для завершения регистрации подтвердите ваш email
                    </div>

                    {{ form_start(formReg, {
                        attr: {class: 'form-signin my-form'}
                    }) }}
                        {{ form_errors(formReg) }}
                        <div class="form-label-group mb-4">
                            {{ form_widget(formReg.name, {'attr': {placeholder: 'Ваше имя'}}) }}
                            {{ form_label(formReg.name, 'Ваше имя') }}
                        </div>
                        <div class="form-label-group mb-4">
                            {{ form_widget(formReg.email, {'attr': {placeholder: 'Ваш Email'}}) }}
                            {{ form_label(formReg.email, 'Ваш Email') }}
                        </div>
                        <div class="form-label-group mb-4">
                            {{ form_widget(formReg.password1, {'attr': {placeholder: 'Пароль'}}) }}
                            {{ form_label(formReg.password1, 'Пароль') }}
                        </div>
                        <div class="form-label-group mb-4">
                            {{ form_widget(formReg.password2, {'attr': {placeholder: 'Подтверждение пароля'}}) }}
                            {{ form_label(formReg.password2, 'Подтверждение пароля') }}
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Регистрация</button>
                        <hr class="my-4">
                        <div class="text-center"><a href="{{ path('app_login') }}">Я уже зарегистрирован</a></div>
                    {{ form_end(formReg) }}

                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



