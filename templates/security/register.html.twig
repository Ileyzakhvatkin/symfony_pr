{% extends 'base_auth.html.twig' %}

{% block title %}Регистрация на BlaBlaArticle{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Регистрация</h5>
                    {% if errors %}
                        <div class="alert alert-danger" role="alert">
                            {% for error in errors %}
                                <div>{{ error.message }}</div>
                            {% endfor %}
                        </div>
                    {% endif %}

                    <form class="form-signin" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="form-label-group">
                            <input
                                    type="text"
                                    name="name"
                                    value="{{ userName ? userName : '' }}"
                                    id="inputName"
                                    class="form-control"
                                    placeholder="Ваше имя"
                                    autofocus
                            >
                            <label for="inputName">Ваше имя</label>
                        </div>
                        <div class="form-label-group">
                            <input
                                    type="text"
                                    name="email"
                                    value="{{ userEmail ? userEmail : '' }}"
                                    id="inputEmail"
                                    class="form-control"
                                    placeholder="Ваш Email"
                            >
                            <label for="inputEmail">Ваш Email</label>
                        </div>

                        <div class="form-label-group">
                            <input
                                    type="password"
                                    name="password1"
                                    id="inputPassword"
                                    class="form-control"
                                    placeholder="Пароль"
                            >
                            <label for="inputPassword">Пароль</label>
                        </div>

                        <div class="form-label-group">
                            <input
                                    type="password"
                                    name="password2"
                                    id="inputConfirmPassword"
                                    class="form-control"
                                    placeholder="Подтверждение пароля"
                            >
                            <label for="inputConfirmPassword">Подтверждение пароля</label>
                        </div>

                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Регистрация</button>
                        <hr class="my-4">
                        <div class="text-center"><a href="{{ path('app_login') }}">Я уже зарегистрирован</a></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



