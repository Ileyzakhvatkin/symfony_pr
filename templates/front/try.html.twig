{% extends 'base_front.html.twig' %}

{% block content %}
<section>
    <div class="container my-5">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">

                <h2 class="card-title text-center mb-4">Создание статьи</h2>

                {% if status %}
                    <div class="alert alert-info" role="alert">
                        Чтобы создать статью по настоящему <a href="{{ path('app_register') }}">Зарегистрируйтесь</a>
                    </div>
                {% endif %}
                {% if tryErrors %}
                    <div class="alert alert-danger" role="alert">
                        {% for error in tryErrors %}
                            <div>{{ error }}</div>
                        {% endfor %}
                    </div>
                {% endif %}

                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('dashboard') }}" class="btn btn-block btn-lg btn-primary">Кабинет</a>
                {% else %}
                    <form class="form-signin" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-label-group">
                            <input
                                    type="text"
                                    name="title"
                                    value="{{ title ? title : '' }}"
                                    id="articleTitle"
                                    class="form-control"
                                    placeholder="Заголовок статьи"
                                    {{ status ? 'disabled' : '' }}
                                    autofocus
                            >
                            <label for="articleTitle">Заголовок статьи</label>
                        </div>
                        <div class="form-label-group">
                            <input
                                    type="text"
                                    name="keyword"
                                    value="{{ keyword ? keyword : '' }}"
                                    id="articleWord"
                                    class="form-control"
                                    placeholder="Продвигаемое слово"
                                    {{ status ? 'disabled' : '' }}
                            >
                            <label for="articleWord">Продвигаемое слово</label>
                        </div>

                        <button
                                class="btn btn-lg btn-primary btn-block text-uppercase"
                                type="submit"
                                {{ status ? 'disabled' : '' }}
                        >Попробовать</button>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
</section>

<hr>

<section>
    <div class="container my-5">
        <div class="row">
            <div class="col-lg-12 mx-auto">
                {% if status %}
                    <h2 class="card-title text-center mb-4">{{ title }}</h2>
                    <div class="row">
                        <div class="p-3">
                            <h2>Добавляйте свои слова</h2>
                            <p class="lead mb-0">{{ text[0] }}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="showcase-text p-3">
                            <div class="media">
                                <div class="media-body">
                                    <h2>Вставляйте изображения</h2>
                                    <p class="lead mb-0">{{ text[1] }}</p>
                                </div>
                                <img class="ml-3" src="{{ asset('img/bg-showcase-2.jpg') }}" width="518" height="345" alt="">
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="p-3">
                            <h2>Интегрируйтесь по API</h2>
                            <p class="lead mb-0">{{ text[2] }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}



