{% extends 'base_dashboard.html.twig' %}

{% block content %}
<h1 class="mt-4">Рабочий стол</h1>
<div class="row">
    <div class="col-xl-8 border-right">
        {% if licenseStatus %}
            <div class="alert alert-warning" role="alert">
                {{ licenseInfo['status'] }}
            </div>
        {% endif %}
        <div class="card-columns dashboard">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ allArticles }}</h5>
                    <p class="card-text">Всего статей создано.</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{ articlesLastMonth }}</h5>
                    <p class="card-text">Создано в этом месяце.</p>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        {{ licenseInfo['type'] }}
                       </h5>
                    <p class="card-text">Ваш уровень подписки.</p>
                    {% if licenseInfo['type'] != 'PRO' %}
                        <a href="{{ path('subscription') }}" class="btn btn-primary">Улучшить</a>
                    {% endif %}
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Создать статью</h5>
                    <a href="{{ path('create_article') }}" class="btn btn-primary">Создать</a>
                </div>
            </div>
            {% if(latestArticle) %}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ latestArticle.title }}</h5>
                        <div class="card-text">{{ latestArticle.content|u.truncate(200, '...')|raw }}</div>
                        <a href="{{ path('article_detail', {id: latestArticle.id}) }}" class="btn btn-primary">Подробнее</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}



