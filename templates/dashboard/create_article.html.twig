{% extends 'base_dashboard.html.twig' %}

{% block content %}
<h1 class="mt-4">Создание статьи</h1>
<div class="row">
    <div class="col-xl-6">
        {% if licenseInfo['status'] %}
            <div class="alert alert-warning" role="alert">
                {{ licenseInfo['status'] }}
            </div>
        {% endif %}
        {% if isBlocked %}
            {{ form_start(formArt) }}
                <div class="form-group">
                    <label for="fieldTheme">Тематика</label>
                    <select class="form-control" id="fieldTheme">
                        <option>-</option>
                        <option>Про еду</option>
                        <option>Про PHP</option>
                    </select>
                </div>
                <div class="form-label-group">
                    {{ form_widget(formArt.title, {'attr': {'class': 'form-control', placeholder: 'Заголовок статьи'}}) }}
                    {{ form_label(formArt.title, 'Заголовок статьи') }}
                    {{ form_errors(formArt.title) }}
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <p class="card-title">Ключевое слово</p>
                        <div class="form-label-group">
                            {{ form_widget(formArt.key_word, {'attr': {'class': 'form-control', placeholder: 'Ключевое слово'}}) }}
                            {{ form_label(formArt.key_word, 'Ключевое слово') }}
                            {{ form_errors(formArt.key_word) }}
                        </div>
                        <div class="form-label-group">
                            {{ form_widget(formArt.key_word_dist, {'attr': {'class': 'form-control', placeholder: 'Родительный падеж'}}) }}
                            {{ form_label(formArt.key_word_dist, 'Родительный падеж') }}
                            {{ form_errors(formArt.key_word_dist) }}
                        </div>
                        <div class="form-label-group">
                            {{ form_widget(formArt.key_word_many, {'attr': {'class': 'form-control', placeholder: 'Множественное число'}}) }}
                            {{ form_label(formArt.key_word_many, 'Множественное число') }}
                            {{ form_errors(formArt.key_word_many) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div class="form-label-group">
                            {{ form_widget(formArt.min_size, {'attr': {'class': 'form-control', placeholder: 'Размер статьи от'}}) }}
                            {{ form_label(formArt.min_size, 'Размер статьи') }}
                            {{ form_errors(formArt.min_size) }}
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-label-group">
                            {{ form_widget(formArt.max_size, {'attr': {'class': 'form-control', placeholder: 'До'}}) }}
                            {{ form_label(formArt.max_size, 'До') }}
                            {{ form_errors(formArt.max_size) }}
                        </div>
                    </div>
                </div>
                <div class="card mb-4">
                    <div class="card-body">
                        <p class="card-title">Продвигаемые слова</p>
                        <div class="row">
                            <div class="col">
                                <div class="form-label-group">
                                    {{ form_widget(formArt.word_1, {'attr': {'class': 'form-control', placeholder: 'Продвигаемое слово'}}) }}
                                    {{ form_label(formArt.word_1, 'Продвигаемое слово') }}
                                    {{ form_errors(formArt.word_1) }}
                                </div>
                              </div>
                            <div class="col">
                                <div class="form-label-group">
                                    {{ form_widget(formArt.word_count_1, {'attr': {'class': 'form-control', placeholder: 'кол-во'}}) }}
                                    {{ form_label(formArt.word_count_1, 'кол-во') }}
                                    {{ form_errors(formArt.word_count_1) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="form-label-group">
                                    {{ form_widget(formArt.word_2, {'attr': {'class': 'form-control', placeholder: 'Продвигаемое слово'}}) }}
                                    {{ form_label(formArt.word_2, 'Продвигаемое слово') }}
                                    {{ form_errors(formArt.word_2) }}
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-label-group">
                                    {{ form_widget(formArt.word_count_2, {'attr': {'class': 'form-control', placeholder: 'кол-во'}}) }}
                                    {{ form_label(formArt.word_count_2, 'кол-во') }}
                                    {{ form_errors(formArt.word_count_2) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlFile1">Изображения</label>
                    <input type="file" multiple class="form-control-file" id="exampleFormControlFile1">
                </div>

                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Добавить</button>

            {{ form_end(formArt) }}
        {% else %}
            <div class="alert alert-danger" role="alert">
                Превышен лимит создания статей, чтобы снять лимит <a href="{{ path('subscription') }}">Улучшите подписку</a>
            </div>
        {% endif %}
    </div>
</div>
<hr>
{% if content %}
    <h2 class="mt-4">Ваша статья</h2>
    <hr>
    <div class="row mb-5">
        <div class="col-xl-6">
            {{ content }}
        </div>
    </div>
{% endif %}

{% endblock %}



