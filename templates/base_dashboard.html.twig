{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex" id="wrapper">
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">BlaBlaArticle</div>
            <div class="list-group list-group-flush">
                <a href="{{ path('dashboard') }}" class="list-group-item list-group-item-action {{ itemActive == 1  ? 'active' : 'bg-light' }} ">Рабочий стол</a>
                <a href="{{ path('create_article') }}" class="list-group-item list-group-item-action  {{ itemActive == 2  ? 'active' : 'bg-light' }} ">Создать статью</a>
                <a href="{{ path('history') }}" class="list-group-item list-group-item-action {{ itemActive == 3  ? 'active' : 'bg-light' }} ">История статей</a>
                <a href="{{ path('subscription') }}" class="list-group-item list-group-item-action {{ itemActive == 4  ? 'active' : 'bg-light' }} ">Подписка</a>
                <a href="{{ path('profile') }}" class="list-group-item list-group-item-action {{ itemActive == 5  ? 'active' : 'bg-light' }} ">Профиль</a>
                <a href="{{ path('modules') }}" class="list-group-item list-group-item-action {{ itemActive == 6  ? 'active' : 'bg-light' }} ">Модули генератора</a>
            </div>
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle">Скрыть меню</button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Показать/Скрыть навигацию">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="{{ path('front_homepage') }}">Выйти</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>
{% endblock %}



